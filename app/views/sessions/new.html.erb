<div class="page-wrapper">
  <div class="mod mod-login unit size1of3">
    <div class="mod-header">
      <h2>Log in</h2>
    </div>
    <div class="mod-body">
      <!--<div class="error-message">-->
        <!--<ul>-->
        <!--<% flash.each do |name, msg|  %>-->
          <!--<li>-->
          <!--<%= msg %>-->
          <!--</li>-->
        <!--<% end  %>-->
        <!--</ul>-->
      <!--</div>-->
      <%= form_tag sessions_path do %>
        <div class="field">
          <div class="field-label">
            <%= label_tag :email %>
          </div>
          <div class="field-input field-input-skin-1">
            <%= text_field_tag :email, params[:email] %>
          </div>
        </div>
        <div class="field">
          <div class="field-label">
            <%= label_tag :password %>
          </div>
          <div class="field-input field-input-skin-1">
            <%= password_field_tag :password %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <p><%= submit_tag "Log in", :class => 'button button-skin-primary' %></p>
        <p><%= link_to "Forgot password?", new_password_reset_path %></p>
      </div>
    <% end %>
  </div>
  </div>
</div>